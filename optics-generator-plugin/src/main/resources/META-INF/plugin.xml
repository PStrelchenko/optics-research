<idea-plugin>
    <id>optics-generator-plugin</id>
    <name>Optics Generator</name>
    <vendor email="p.strelchenko@hh.ru" url="hh.ru">hh.ru</vendor>

    <description><![CDATA[
    Plugin for generating different Optics in Kotlin classes
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="optics_plugin.actions.GenerateLensAction" class="optics_plugin.actions.GenerateLensAction"
                text="Generate Lens..." description="Generating Lens from current data class">
            <add-to-group group-id="GenerateGroup" anchor="after" relative-to-action="KotlinGenerateGroup"/>
        </action>
    </actions>
</idea-plugin>